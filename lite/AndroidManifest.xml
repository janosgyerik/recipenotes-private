<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.recipenotes.lite"
    android:versionCode="6"
    android:versionName="1.4" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="4" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name="com.recipenotes.RecipeNotesApplication"
        android:icon="@drawable/launcher_main"
        android:label="@string/app_name"
        android:theme="@style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.recipenotes.RecipeListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.recipenotes.PhotoListActivity"
            android:label="Recipes" >
        </activity>
        <activity
            android:name="com.recipenotes.EditRecipeActivity"
            android:label="Edit recipe" >
        </activity>
        <activity
            android:name="com.recipenotes.ViewRecipeActivity"
            android:label="Recipe" >
        </activity>
        <activity
            android:name="com.recipenotes.FileSelectorActivity"
            android:label="File Selector"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.recipenotes.EditIngredientsActivity"
            android:label="Ingredients"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.recipenotes.EditTagsActivity"
            android:label="Tags"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>
