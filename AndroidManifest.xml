<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.recipenotes"
    android:versionCode="4"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="4" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:icon="@drawable/launcher_main"
        android:label="@string/app_name"
        android:theme="@style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".RecipeListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PhotoListActivity"
            android:label="Recipes" >
        </activity>
        <activity
            android:name=".EditRecipeActivity"
            android:label="Edit recipe" >
        </activity>
        <activity
            android:name=".ViewRecipeActivity"
            android:label="Recipe" >
        </activity>
        <activity
            android:name=".FileSelectorActivity"
            android:label="File Selector"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".EditIngredientsActivity"
            android:label="Ingredients"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".EditTagsActivity"
            android:label="Tags"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>