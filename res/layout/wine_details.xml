<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="none" >

    <!--
    name # text
    year # spinner
    type # toggle
    region # auto complete
    grape # auto complete
    
    aroma # rate
    -->

    <EditText
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Name" />

    <EditText
        android:id="@+id/year"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Year" />

    <EditText
        android:id="@+id/wine_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="red / white / rose" />

    <EditText
        android:id="@+id/region"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Region" />

    <EditText
        android:id="@+id/grape"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Grape" />

    <MultiAutoCompleteTextView
        android:id="@+id/aromas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Aromas" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/label"
                android:text="Aroma" />

            <RatingBar
                android:id="@+id/rating_aroma"
                style="@style/pretty_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/label"
                android:text="Taste" />

            <RatingBar
                android:id="@+id/rating_taste"
                style="@style/pretty_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/label"
                android:text="After-taste" />

            <RatingBar
                android:id="@+id/rating_after_taste"
                style="@style/pretty_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/label"
                android:text="Overall" />

            <RatingBar
                android:id="@+id/rating_overall"
                style="@style/pretty_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0" />
        </TableRow>
    </TableLayout>

    <!--
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add wine" />
    -->

</LinearLayout>